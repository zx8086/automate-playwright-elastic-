{
  "name": "automate-playwright-elastic",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "bun playwright test src/playwright.spec.ts",
    "synthetics": "npx @elastic/synthetics synthetics/core.journey.ts",
    "synthetics:all": "npx @elastic/synthetics synthetics/",
    "synthetics:push": "npx @elastic/synthetics push synthetics/core.journey.ts",
    "generate-and-test": "bun run test && bun run synthetics"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elastic/synthetics": "^1.18.1",
    "dotenv": "^16.4.5",
    "playwright": "^1.52.0",
    "zod": "^4.0.17"
  }
}

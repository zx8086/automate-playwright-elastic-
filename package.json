{
  "name": "automate-playwright-elastic",
  "type": "module",
  "private": true,
  "scripts": {
    "postinstall": "bunx playwright install",
    "test": "bun playwright test src/playwright.spec.ts",
    "synthetics": "NODE_OPTIONS='--no-experimental-strip-types' npx @elastic/synthetics synthetics/core.journey.ts",
    "synthetics:all": "NODE_OPTIONS='--no-experimental-strip-types' npx @elastic/synthetics synthetics/",
    "synthetics:push": "NODE_OPTIONS='--no-experimental-strip-types' npx @elastic/synthetics push synthetics/core.journey.ts",
    "generate-and-test": "bun run test && bun run synthetics",
    "typecheck": "tsc --noEmit",
    "biome:lint": "biome lint .",
    "biome:lint:fix": "biome lint --write .",
    "biome:format": "biome format .",
    "biome:format:write": "biome format --write .",
    "biome:check": "biome check .",
    "biome:check:write": "biome check --write .",
    "biome:check:unsafe": "biome check --write --unsafe .",
    "biome:ci": "biome ci ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@playwright/test": "^1.58.2",
    "@types/bun": "1.3.9",
    "dotenv": "^17.3.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@elastic/synthetics": "^1.23.0",
    "playwright": "^1.58.2",
    "zod": "^4.3.6"
  }
}
